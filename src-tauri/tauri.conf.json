{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ElegantClipboard",
  "version": "0.4.0",
  "identifier": "com.aslant.elegant-clipboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:14200",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ElegantClipboard",
        "width": 380,
        "height": 520,
        "minWidth": 360,
        "minHeight": 520,
        "decorations": false,
        "transparent": false,
        "shadow": true,
        "resizable": true,
        "center": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "installerHooks": "nsis/hooks.nsh",
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": false
      }
    }
  }
}
